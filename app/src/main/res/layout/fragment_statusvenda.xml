<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.appcartaoservidorv1.viewmodels.comerciante.StatusvendaViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:text="@string/status"
            style="@style/textoTituloBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- A CardView that contains a TextView -->
        <ImageView
            android:id="@+id/Image"
            style="@style/imagemTituloBar"
            android:src="@drawable/icon_credit_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <LinearLayout
            android:id="@+id/Saldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:orientation="vertical"
            android:padding="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Image"
            app:layout_constraintVertical_bias="0.27">

            <ImageView
                android:id="@+id/ImageStatusSucess"
                style="@style/imagemStatus"
                android:src="@drawable/icon_check"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ImageStatusError"
                style="@style/imagemStatus"
                android:src="@drawable/icon_close"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/Bar"
                style="@style/ProgressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/result"
                style="@style/resultStatus"
                android:layout_marginTop="5dp"
                android:text="@{viewModel.result}"
                tools:text="Transação bem sucedida"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/motivo"
                style="@style/sv_Mensagem"
                android:layout_marginTop="5dp"
                android:text="@{viewModel.motivo}"
                tools:text="Erro no banco de dados"
                android:visibility="invisible"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnHome"
            style="@style/ImageBtnStyle"
            android:layout_marginBottom="40dp"
            android:drawableTop="@drawable/selector_home"
            android:text="Pagina principal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>