<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.appcartaoservidorv1.viewmodels.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/FragmentoStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/VerdeDias">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="70dp"
            android:src="@drawable/logo_dias"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <TextView-->
<!--            android:id="@+id/textView4"-->
<!--            style="@style/TituloStyle"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="15dp"-->
<!--            android:text="@string/seja_bem_vindo"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/logo" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="25dp"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo">

            <ProgressBar
                android:id="@+id/Bar"
                style="@style/ProgressBarStyleLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/NomeBiometria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textColor="@color/Branco"
                android:textSize="20sp"
                tools:text="Olá, Fulaninho" />

                        <Switch
                            android:id="@+id/Biometria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginBottom="7dp"
                            android:checked="false"
                            android:textColor="@color/Branco"
                            android:text="Ativar Biometria"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                        <EditText
                            android:id="@+id/Matricula"
                            style="@style/EntryStyleLogin"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginBottom="7dp"
                            android:hint="@string/matricula"
                            android:inputType="number"
                            android:maxLength="5"
                            android:paddingHorizontal="15dp"
                            android:text="@={viewModel.Matricula}" />

                        <EditText
                            android:id="@+id/Senha"
                            style="@style/EntryStyleLogin"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginBottom="7dp"
                            android:hint="@string/senha"
                            android:inputType="textPassword"
                            android:paddingHorizontal="15dp"
                            android:text="@={viewModel.Senha}" />

            <TextView
                android:id="@+id/Mensagem"
                style="@style/erroStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                tools:text="Problemas no servidor, aguarde e tente novamente" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <!-- A CardView that contains a TextView -->
                <ImageView
                    android:id="@+id/ImagemDigital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_fingerprint"
                    android:layout_gravity="center"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnEntrar"
                    style="@style/LoginImageBtnStyle"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/icon_arrow_forward_ios"
                    android:text="@string/entrar" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTrocarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <!-- A CardView that contains a TextView -->
            <TextView
                android:id="@+id/textTrocarUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Branco"
                android:layout_gravity="start"
                android:textSize="11sp"
                tools:text="Não é fulaninho?" />

            <Button
                android:id="@+id/btnTrocarUsuario"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/icon_swap_horizontal_circle"
                android:padding="0dp"
                android:text="Trocar usuário"
                android:textColor="@color/Branco"
                android:textSize="11sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>